.post-wrapper {
  padding: 5px 0;
  background-color: #efeef4;
}

.post {
  margin: 12px 10px;
  padding-bottom: 12px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 1px 2px 4px rgba(0, 0, 0, 0.15);
  overflow: hidden;
}

.post .img {
  width: 100%;
  height: 350rpx;
}

.post .title {
  font-size: 17px;
  font-weight: 600;
  margin: 8px 15px;
}

.post .info {
  margin: 8px 8px;
}

.post .info .avator {
  width: 26px;
  height: 26px;
  border-radius: 13px;
  vertical-align: middle;
}

.post .info text {
  margin: 0 5px 0 10px;
  font-size: 13px;
  color: #888;
}

.post .content {
  margin: 8px 10px;
  color: #666;
  font-size: 14px;
  line-height: 1.5;
  letter-spacing: 1px;
  text-align: justify;
}
.post .like {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  color: #888;
  font-size: 26rpx;
  margin-right: 40rpx;
}

